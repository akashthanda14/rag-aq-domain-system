# Environment Variables for RAG System
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here  # Optional

# HuggingFace Configuration (if using HF models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here  # Optional

# Vector Database Configuration
# PINECONE_API_KEY=your_pinecone_api_key_here  # If using Pinecone
# PINECONE_ENV=your_pinecone_environment_here

# System Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo
TEMPERATURE=0.7
MAX_TOKENS=500

# Cache Directories
CACHE_DIR=cache
EMBEDDING_CACHE_DIR=cache/embeddings
INDEX_CACHE_DIR=cache/indices

# Logging
LOG_LEVEL=INFO
